<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="404.0" prefWidth="360.0" spacing="20.0" style="-fx-background-color: E03E52; -fx-border-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudoku.controller.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fx:id="logoImageView" fitHeight="203.0" fitWidth="265.0" pickOnBounds="true" preserveRatio="true">
      <VBox.margin>
         <Insets bottom="-10.0" />
      </VBox.margin>
   </ImageView>
    <Button onAction="#onPlayButtonClick" prefHeight="20.0" prefWidth="173.0" style="-fx-background-color: B30838;" text="Play!" textFill="WHITE">
      <VBox.margin>
         <Insets bottom="-15.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor></Button>
   <Button mnemonicParsing="false" onAction="#onHowToButtonClick" prefHeight="27.0" prefWidth="175.0" style="-fx-background-color: B30838;" text="How To Play?" textFill="WHITE">
      <VBox.margin>
         <Insets bottom="-15.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
   </Button>
   <Button mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="25.0" prefWidth="175.0" style="-fx-background-color: B30838;" text="Exit" textFill="WHITE">
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
   </Button>
</VBox>
